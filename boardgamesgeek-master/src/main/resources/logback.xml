<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>[%-5level] -- %msg%n</pattern>
		</encoder>
	</appender>

	<logger name="tech.automationlabs" level="debug" additivity="false">
		<appender-ref ref="STDOUT"/>
	</logger>

	<root level="debug">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>
